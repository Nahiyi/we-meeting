<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.clazs.easymeeting.mapper.MeetingReserveMemberMapper">

    <resultMap id="BaseResultMap" type="cn.clazs.easymeeting.entity.po.MeetingReserveMember">
        <result column="meeting_id" property="meetingId"/>
        <result column="invite_user_id" property="inviteUserId"/>
    </resultMap>

    <sql id="Base_Column_List">
        meeting_id, invite_user_id
    </sql>

    <insert id="insert">
        INSERT INTO meeting_reserve_member (meeting_id, invite_user_id)
        VALUES (#{meetingId}, #{inviteUserId})
    </insert>

    <insert id="batchInsert">
        INSERT INTO meeting_reserve_member (meeting_id, invite_user_id)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.meetingId}, #{item.inviteUserId})
        </foreach>
    </insert>

    <select id="selectByMeetingIdAndUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM meeting_reserve_member
        WHERE meeting_id = #{meetingId} AND invite_user_id = #{inviteUserId}
    </select>

    <select id="selectByMeetingId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM meeting_reserve_member
        WHERE meeting_id = #{meetingId}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM meeting_reserve_member
        WHERE invite_user_id = #{inviteUserId}
    </select>

    <delete id="deleteByMeetingId">
        DELETE
        FROM meeting_reserve_member
        WHERE meeting_id = #{meetingId}
    </delete>

    <delete id="deleteByMeetingIdAndUserId">
        DELETE
        FROM meeting_reserve_member
        WHERE meeting_id = #{meetingId}
          AND invite_user_id = #{inviteUserId}
    </delete>

</mapper>
