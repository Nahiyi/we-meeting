<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.clazs.easymeeting.mapper.UserContactMapper">

    <resultMap id="BaseResultMap" type="cn.clazs.easymeeting.entity.po.UserContact">
        <id column="user_id" property="userId"/>
        <result column="contact_id" property="contactId"/>
        <result column="status" property="status"/>
        <result column="last_update_time" property="lastUpdateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id, contact_id, status, last_update_time
    </sql>

    <insert id="insert">
        INSERT INTO user_contact (user_id, contact_id, status)
        VALUES (#{userId}, #{contactId}, #{status})
    </insert>

    <!-- 插入或更新（利用唯一索引），已存在则更新状态 -->
    <insert id="insertOrUpdate">
        INSERT INTO user_contact (user_id, contact_id, status)
        VALUES (#{userId}, #{contactId}, #{status})
        ON DUPLICATE KEY UPDATE status = #{status}
    </insert>

    <update id="updateByUserId">
        UPDATE user_contact
        <set>
            <if test="contactId != null">contact_id = #{contactId},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteByUserId">
        DELETE
        FROM user_contact
        WHERE user_id = #{userId}
    </delete>

    <delete id="deleteByContactId">
        DELETE
        FROM user_contact
        WHERE contact_id = #{contactId}
    </delete>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_contact WHERE user_id = #{userId}
    </select>

    <select id="selectByContactId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_contact WHERE contact_id = #{contactId}
    </select>

    <select id="selectByStatus" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_contact WHERE status = #{status}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_contact
    </select>

    <select id="selectByUserIdAndContactId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_contact
        WHERE user_id = #{userId} AND contact_id = #{contactId}
    </select>

    <select id="selectContactsByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_contact
        WHERE user_id = #{userId}
        ORDER BY last_update_time DESC
    </select>

    <!-- 查询用户的正常好友列表（status=0） -->
    <select id="selectNormalContactsByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_contact
        WHERE user_id = #{userId} AND status = 0
        ORDER BY last_update_time DESC
    </select>

    <update id="updateStatus">
        UPDATE user_contact
        SET status = #{status}
        WHERE user_id = #{userId}
          AND contact_id = #{contactId}
    </update>

    <!-- 查询用户的正常好友列表（关联用户昵称、性别、在线状态） -->
    <select id="selectNormalContactsWithNickName" resultType="cn.clazs.easymeeting.entity.vo.UserContactVO">
        SELECT c.user_id          AS userId,
               c.contact_id       AS contactId,
               u.nick_name        AS contactNickName,
               u.sex              AS sex,
               u.last_login_time  AS lastLoginTime,
               u.last_off_time    AS lastOffTime,
               c.status,
               c.last_update_time AS lastUpdateTime
        FROM user_contact c
                 LEFT JOIN user_info u ON c.contact_id = u.user_id
        WHERE c.user_id = #{userId}
          AND c.status = 0
        ORDER BY c.last_update_time DESC
    </select>

</mapper>
